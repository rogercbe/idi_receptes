<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rogercendros.receptes" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReceptaActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_recepta" >
        </activity>
        <activity
            android:name=".NovaRecepta"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_nova_recepta" >
        </activity>
        <activity
            android:name=".FotosActivity"
            android:label="@string/title_activity_fotos" >
        </activity>
        <activity
            android:name=".EditarRecepta"
            android:launchMode="singleTop"
            android:parentActivityName=".ReceptaActivity"
            android:label="@string/title_activity_editar_recepta" >
        </activity>
        <activity
            android:name=".IngredientsActivity"
            android:parentActivityName=".NovaRecepta"
            android:label="@string/title_activity_ingredients" >
        </activity>
        <activity
            android:name=".EditIngredientsActivity"
            android:parentActivityName=".EditarRecepta"
            android:label="@string/title_activity_edit_ingredients" >
        </activity>
        <activity
            android:parentActivityName=".NovaRecepta"
            android:launchMode="singleTop"
            android:name=".IngredientSubstitut"
            android:label="@string/title_activity_ingredient_substitut" >
        </activity>
    </application>

</manifest>
